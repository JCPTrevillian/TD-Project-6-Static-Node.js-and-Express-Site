extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
  a(href='/') ‚Üê Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        h1= project.project_name
        p= project.description
      .project-tech-links-box.box
        h6 Languages and Tools 
        ul
          each tech in project.technologies
            li= tech
        a.btn-link(href=`https://${project.live_link}`, target="_blank") Live Demo
        a.btn-link(href=`https://${project.github_link}`, target="_blank") GitHub Repo

        img.image(class="project-img" src=`${project.image_urls[1]}`)